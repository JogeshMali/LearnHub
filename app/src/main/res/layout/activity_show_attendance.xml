<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="700sp"
    tools:context=".classroomUi.classwork.ShowAttendance"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="#F5F5F5">

        <!-- Header Section -->
        <TextView
            android:id="@+id/attendanceHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Attendance"
            android:textColor="#004D40"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginBottom="20sp"/>

        <!-- Divider -->
        <View
            android:layout_width="350sp"
            android:layout_height="4dp"
            android:background="#004D40"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Attendance Title -->
        <TextView
            android:id="@+id/attendancestdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance Title"
            android:textSize="28sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16sp"/>

        <!-- Attendance Date -->
        <TextView
            android:id="@+id/attendanceDatestd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: YYYY-MM-DD"
            android:textSize="24sp"
            android:textColor="#757575"
            android:layout_marginBottom="24dp"/>

        <!-- Timer Display -->
        <TextView
            android:id="@+id/attendanceTimerStd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Remaining: 00:00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginBottom="32dp"/>

        <!-- Instructions -->
        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please mark your attendance within the time limit."
            android:textSize="20sp"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"/>

        <!-- Mark Present Button -->
    <Button
        android:id="@+id/markPresentButton"
        android:layout_width="362dp"
        android:layout_height="75dp"
        android:layout_marginBottom="20sp"
        android:backgroundTint="#388E3C"
        android:paddingVertical="12dp"
        android:text="Mark as Present"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginTop="20sp"/>

        <!-- Mark Absent Button -->
    <Button
        android:id="@+id/markAbsentButton"
        android:layout_width="351dp"
        android:layout_height="76dp"
        android:backgroundTint="#D32F2F"
        android:paddingVertical="12dp"
        android:text="Mark as Absent"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
    </LinearLayout>
