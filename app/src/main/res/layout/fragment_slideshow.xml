<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faculty.ui.slideshow.SlideshowFragment"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo1withblue"
        android:layout_gravity="center"
        android:contentDescription="App Logo"
        android:layout_marginBottom="24dp"/>

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LearnHUB"
        android:textSize="26sp"
        android:textColor="@color/toolbarcolor"
        android:textStyle="bold"

    android:layout_marginTop="16dp"
    android:layout_gravity="center"/>

    <!-- App Description -->
    <TextView
        android:id="@+id/app_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:layout_marginTop="16dp"
        android:text="The LearnHub application aims to automate the existing manual system used by the IT department through advanced software and technology. LearnHub provides an intuitive, easy-to-use platform that enhances data accuracy, accessibility, and reliability, ensuring streamlined operations and effective record-keeping."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="6dp"
    android:layout_marginBottom="24dp"/>

    <!-- Developed By Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By:"
        android:textColor="@color/toolbarcolor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        />

    <!-- Developer List in CardView for separation -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aaryan Chavan - FS22IF002"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abhijith Shetty - FS22IF004"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamesh Nerpagar - FS22IF007"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JogeshKumar Mali - FS22IF008"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Version Information -->
    <TextView
        android:id="@+id/version_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: 1.0.0"
        android:textSize="14sp"
        android:textColor="#808080"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        />

</LinearLayout>
